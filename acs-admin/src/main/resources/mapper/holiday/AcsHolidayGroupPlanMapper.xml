<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzcloud.group.mapper.AcsHolidayGroupPlanMapper">

	<resultMap type="AcsHolidayGroupPlan" id="AcsHolidayGroupPlanResult">
		<result property="groupId"     column="group_id"      />
		<result property="planId"     column="plan_id"      />
	</resultMap>

	<delete id="deleteGroupPlanByGroupId" parameterType="Long">
		delete from acs_holiday_group_plan where group_id=#{groupId}
	</delete>
	
	<select id="countGroupPlanByPlanId" resultType="Integer">
	    select count(1) from acs_holiday_group_plan where plan_id=#{planId}  
	</select>
	
	<delete id="deleteGroupPlan" parameterType="Long">
 		delete from acs_holiday_group_plan where group_id in
 		<foreach collection="array" item="groupId" open="(" separator="," close=")">
 			#{groupId}
        </foreach> 
 	</delete>
	
	<insert id="batchGroupPlan">
		insert into acs_holiday_group_plan(group_id, plan_id) values
		<foreach item="item" index="index" collection="list" separator=",">
			(#{item.groupId},#{item.planId})
		</foreach>
	</insert>
	
	<delete id="deleteGroupPlanInfo" parameterType="AcsDeviceZoneCon">
		delete from acs_holiday_group_plan where group_id=#{groupId} and plan_id=#{planId}
	</delete>
	
	<delete id="deleteGroupPlanInfos">
	    delete from acs_holiday_group_plan where plan_id=#{planId} and group_id in
 	    <foreach collection="zoneIds" item="groupId" open="(" separator="," close=")">
 	        #{groupId}
            </foreach> 
	</delete>
</mapper> 