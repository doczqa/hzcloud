<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzcloud.group.mapper.AscDoorGroupUserGroupMapper">
    
    <resultMap type="AscDoorGroupUserGroup" id="AscDoorGroupUserGroupResult">
        <result property="doorGroupId"    column="door_group_id"    />
        <result property="userGroupId"    column="user_group_id"    />
    </resultMap>

    <sql id="selectAscDoorGroupUserGroupVo">
        select door_group_id, user_group_id from asc_door_group_user_group
    </sql>

    <select id="selectAscDoorGroupUserGroupList" parameterType="AscDoorGroupUserGroup" resultMap="AscDoorGroupUserGroupResult">
        <include refid="selectAscDoorGroupUserGroupVo"/>
        <where>
            <if test="doorGroupId != null">
                door_group_id = #{doorGroupId}
            </if>
            <if test="userGroupId != null">
                and user_group_id = #{userGroupId}
            </if>
        </where>
    </select>
    
    <select id="selectAscDoorGroupUserGroupById" parameterType="Long" resultMap="AscDoorGroupUserGroupResult">
        <include refid="selectAscDoorGroupUserGroupVo"/>
        where door_group_id = #{doorGroupId}
    </select>
        
    <insert id="insertAscDoorGroupUserGroup" parameterType="AscDoorGroupUserGroup">
        insert into asc_door_group_user_group
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="doorGroupId != null">door_group_id,</if>
            <if test="userGroupId != null">user_group_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="doorGroupId != null">#{doorGroupId},</if>
            <if test="userGroupId != null">#{userGroupId},</if>
         </trim>
    </insert>

    <update id="updateAscDoorGroupUserGroup" parameterType="AscDoorGroupUserGroup">
        update asc_door_group_user_group
        <trim prefix="SET" suffixOverrides=",">
            <if test="userGroupId != null">user_group_id = #{userGroupId},</if>
        </trim>
        where door_group_id = #{doorGroupId}
    </update>

    <delete id="deleteAscDoorGroupUserGroupById" parameterType="Long">
        delete from asc_door_group_user_group where door_group_id = #{doorGroupId}
    </delete>

    <delete id="deleteAscDoorGroupUserGroupByIds" parameterType="String">
        delete from asc_door_group_user_group where door_group_id in 
        <foreach item="doorGroupId" collection="array" open="(" separator="," close=")">
            #{doorGroupId}
        </foreach>
    </delete>
</mapper>