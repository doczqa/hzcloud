<mapper namespace="com.hzcloud.v6.mapper.AcsV6TimezoneMapper">
    
    <resultMap type="AcsV6Timezone" id="AcsV6TimezoneResult">
        <result property="id"    column="id"    />
        <result property="interval1"    column="interval_1"    />
        <result property="interval2"    column="interval_2"    />
        <result property="interval3"    column="interval_3"    />
    </resultMap>

    <sql id="selectAcsV6TimezoneVo">
        select id, interval_1, interval_2, interval_3 from acs_v6_timezone
    </sql>

    <select id="selectAcsV6TimezoneList" parameterType="AcsV6Timezone" resultMap="AcsV6TimezoneResult">
        <include refid="selectAcsV6TimezoneVo"/>
        <where>  
        </where>
    </select>
    
    <select id="selectAcsV6TimezoneById" parameterType="String" resultMap="AcsV6TimezoneResult">
        <include refid="selectAcsV6TimezoneVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertAcsV6Timezone" parameterType="AcsV6Timezone">
        insert into acs_v6_timezone
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="interval1 != null">interval_1,</if>
            <if test="interval2 != null">interval_2,</if>
            <if test="interval3 != null">interval_3,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="interval1 != null">#{interval1},</if>
            <if test="interval2 != null">#{interval2},</if>
            <if test="interval3 != null">#{interval3},</if>
         </trim>
    </insert>

    <update id="updateAcsV6Timezone" parameterType="AcsV6Timezone">
        update acs_v6_timezone
        <trim prefix="SET" suffixOverrides=",">
            <if test="interval1 != null">interval_1 = #{interval1},</if>
            <if test="interval2 != null">interval_2 = #{interval2},</if>
            <if test="interval3 != null">interval_3 = #{interval3},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAcsV6TimezoneById" parameterType="String">
        delete from acs_v6_timezone where id = #{id}
    </delete>

    <delete id="deleteAcsV6TimezoneByIds" parameterType="String">
        delete from acs_v6_timezone where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>